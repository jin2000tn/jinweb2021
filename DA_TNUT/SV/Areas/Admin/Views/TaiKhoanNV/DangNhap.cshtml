 @{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Đăng nhập hệ thống</title>
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Areas/Admin/Assets/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/fonts.googleapis.com.css" />
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/ace.min.css" />
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/ace-rtl.min.css" />
</head>

<body class="login-layout  light-login" style="font-family:'Times New Roman', Times, serif">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">  
                        </div> 
                        <div class="space-6"></div> 
                        <div class="position-relative"> 
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger" style="font-family:inherit">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            Đăng nhập hệ thống SV-TNUT
                                        </h4> 
                                        <div class="space-6"></div>
                                        @if (ViewBag.error != null)
                                        {
                                            <label class="text-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @ViewBag.error</label>
                                        } 
                                        <form action="" method="post">
                                            <input name="returnUrl" type="hidden" value="@ViewBag.returnUrl" />
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="text" class="form-control" placeholder="Tên đăng nhập" name="UserName" />
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="password" class="form-control" placeholder="Mật khẩu" name="PassWord" />
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>
                                                <div class="space"></div>

                                                <div class="clearfix"> 
                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Đăng nhập</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form> 
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .light-login {
            background: url(/Areas/Admin/Content/img/background.jpg) #DFE0E2 !important;
            background-size: cover !important
        }
    </style> 
</body>
</html> 


