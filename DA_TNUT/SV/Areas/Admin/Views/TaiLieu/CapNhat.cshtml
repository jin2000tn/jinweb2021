@model SV.Models.TaiLieu

@{
    ViewBag.Title = "Cập nhật văn bản";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Văn bản</a>
        </li>
        <li>
            <a href="#">Thêm mới</a>
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            <small>
                Cập nhật văn bản
            </small>
            <a class="btn btn-success btn-xs pull-right" href="~/Admin/TaiLieu/ThemMoi">Thêm mới</a>
        </h1>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("CapNhat", "TaiLieu", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID)
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên tài liệu</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenTaiLieu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenTaiLieu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Thông tin</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ThongTin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Người upload</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.NguoiUpload, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NguoiUpload, "", new { @class = "text-danger" })
                        </div>
                        <label class="control-label col-md-2">Thời gian upload</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.ThoiGianUpload, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(model => model.ThoiGianUpload, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Đường dẫn file</label>
                        <div class="col-md-4">
                            <input type="file" name="file" class="form-control" />
                            @Html.ValidationMessageFor(model => model.DuongDanFile, "", new { @class = "text-danger" })
                        </div>
                        <label class="control-label col-md-2">Trạng thái phê duyệt</label>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <select class="form-control" name="TrangThaiPheDuyet">
                                    <option value="false" @Html.Raw(Model.TrangThaiPheDuyet == false ? "selected" : "")>Chưa phê duyệt</option>
                                    <option value="true" @Html.Raw(Model.TrangThaiPheDuyet == true ? "selected" : "")>Đã phê duyệt</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.TrangThaiPheDuyet, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Nhóm tài liệu</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.NhomTaiLieu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NhomTaiLieu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-success btn-sm" />
                            <a class="btn btn-danger btn-sm" href="~/Admin/TaiLieu/DanhSach">Hủy</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
