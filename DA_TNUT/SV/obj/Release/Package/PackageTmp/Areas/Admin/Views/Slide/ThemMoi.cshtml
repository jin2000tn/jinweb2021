@model SV.Models.Slide

@{
    ViewBag.Title = "Thêm mới lide";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>

            <a href="~/admin/Slide/danhsach">Slide</a>
        </li>
        <li>
            <a href="#">Thêm mới</a>
        </li>
    </ul>
    <div class="page-content">
        <div class="page-header">
            <h1>
                <small>
                    Thêm mới lide
                </small>

            </h1>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Tên Slide</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSlide, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSlide, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Mô tả</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Loại Slide</label>
                    <div class="col-md-4">
                        <select class=" form-control" name="LoaiSlide">
                            <option value="TrangChu" @Html.Raw(Model.LoaiSlide == "TrangChu" ? "selected" : "")>Trang chủ</option>
                            <option value="TuyenSinh" @Html.Raw(Model.LoaiSlide == "TuyenSinh" ? "selected" : "")>Tuyển sinh</option>
                            <option value="TinTuc" @Html.Raw(Model.LoaiSlide == "TinTuc" ? "selected" : "")>Tin tức</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.LoaiSlide, "", new { @class = "text-danger" })
                    </div>
                    <label class="control-label col-md-2">Trạng thái hoạt động</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.isActive, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Ngày bắt đầu</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.TuNgay, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.TuNgay, "", new { @class = "text-danger" })
                    </div>
                    <label class="control-label col-md-2">Ngày kết thúc</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.DenNgay, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.DenNgay, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success btn-sm" />
                        <a class="btn btn-danger btn-sm" href="~/Admin/Slide/ChiTiet?id=@Model.ID">Hủy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
