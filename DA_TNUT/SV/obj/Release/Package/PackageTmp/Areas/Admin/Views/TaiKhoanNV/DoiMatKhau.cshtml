@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Nhân viên</a>
        </li>
        <li>
            <a href="#">Đổi mật khẩu</a>
        </li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            <small>
                Đổi mật khẩu
            </small>
        </h1>
    </div>
    <div class="col-md-6 col-sm-offset-3" style="">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-3">Mật khẩu cũ*</label>
                    <div class="col-md-9">
                        <input type="password" name="oldPass"class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Mật khẩu mới*</label>
                    <div class="col-md-9">
                        <input type="password" name="newPass" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9" style="text-align:center">
                        <button type="submit" class="btn btn-success  btn-sm">Lưu</button>
                        <a class="btn btn-danger btn-sm" href="~/Admin/TaiKhoanNV/ThongTin">Hủy</a>
                    </div>
                </div>
            </div>
        } 
    </div>
</div>
