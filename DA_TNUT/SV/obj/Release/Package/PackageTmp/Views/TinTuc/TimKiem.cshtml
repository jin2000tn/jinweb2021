@model IEnumerable<SV.Models.TinTuc>

@{
    ViewBag.Title = ViewBag.tukhoa;
    Layout = "~/Views/shared/layout.cshtml";
    int i = 0;
}

<section id="mu-course-content">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <!-- start course content container -->
                <div class="mu-course-container mu-blog-archive">
                    <div class="row">
                        <article class="mu-blog-single-item">
                            <div class="col-md-12 no-padding">
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <div class="col-md-6 col-sm-6 hot-news-item">
                                        <div class="img-title" style="background:url(http://anhphuongit.com/Data/TinTuc/s8ori_800x600.webp)">
                                            <h3><a href="~/TinTuc/ChiTiet?id=@item.ID">@item.TieuDe"</a></h3>
                                        </div>
                                        <div class="info">
                                            @item.TacGia  | @item.ThoiGian  | <i class="fa fa-comments-o"></i>@item.LuotXem
                                        </div>
                                        <div class="desc">
                                            <p><a href="~/TinTuc/ChiTiet?id=@item.ID">@item.TomTat</a></p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </article>
                    </div>
                </div> 
                <div class="mu-pagination">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span class="fa fa-angle-left"></span> Prev
                                </a>
                            </li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    Next <span class="fa fa-angle-right"></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- end course pagination -->
            </div>

            <div class="right">
                @* Search *@
                <div class="col-md-3">
                    <div class="searchbar">
                        <form class="navbar-form navbar-left" action="~/TinTuc/TimKiem">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search" name="tukhoa" value="@ViewBag.tukhoa">
                            </div>
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"> </i>
                            </button>
                        </form>
                    </div>

                    <!-- start sidebar -->
                    <aside class="mu-sidebar">
                        <!-- start single sidebar -->
                        <div class="mu-single-sidebar">
                            <h3>Top 5 tin hot</h3>
                            @foreach (var item in new SV.Models.Map.mapTinTuc().Top5())
                            {
                                i++;
                                <div class="event-item">
                                    <div class="date">
                                        <span class="dayweek">@item.LuotXem</span>
                                        <span class="day">@item.TacGia</span>
                                        <span class="number" style="font-size: 10px;">@string.Format("{0:dd-MM-yyyy}",item.ThoiGian)</span>
                                    </div>
                                    <div class="info">
                                        <a href="~/Tintuc/ChiTiet?id=@item.ID" style="font-size: 14px;">@item.TieuDe</a> 
                                    </div>
                                </div> 
                            }
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section> 