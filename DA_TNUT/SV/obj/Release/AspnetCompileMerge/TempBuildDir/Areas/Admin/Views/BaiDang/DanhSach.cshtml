@model IEnumerable<SV.Models.BaiDang>

@{
    ViewBag.Title = "Danh sách bài đăng";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
    int i = 0;
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Quản lý bài đăng</a>
        </li>
        <li>
            <a href="#">Danh sách</a>
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            <small>
                Danh sách bài đăng
            </small>
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12 no-padding" style="margin-bottom:15px">
            <form action="" method="post">
                <div class="col-md-3">
                    <input name="tensv" class="form-control" value="@ViewBag.tensv" placeholder="nhập tên sinh viên" />
                </div>
                <button class="btn btn-sm btn-success">Xem</button>
            </form>
        </div>

        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table  table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center" style="width:50px">
                                    STT
                                </th>
                                <th>Họ tên SV</th>
                                <th>Nội dung</th>
                                <th>Thời gian</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @item.SinhVien.HoVaTen
                                    </td>
                                    <td>
                                        @item.NoiDung
                                    </td>
                                    <td>
                                       @string.Format("{0:HH:mm dd-MM-yyyy}", item.ThoiGian)
                                    </td>
                                    <td>
                                        <button class="btn btn-xs btn-danger" onclick="if (confirm('Bạn có muốn xóa không') == true) { location.href ='/Admin/BaiDang/Xoa?id=@item.ID' }">
                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

