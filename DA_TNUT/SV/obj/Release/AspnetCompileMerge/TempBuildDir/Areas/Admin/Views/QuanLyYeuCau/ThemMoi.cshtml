@model SV.Models.YeuCau

@{
    ViewBag.Title = "Thêm mới yêu cầu";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Quảnn lý yêu cầu</a>
        </li>
        <li>
            <a href="#">Thêm mới yêu cầu</a>
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="page-header">
        <h1>
            <small>
               thêm mới  yêu cầu
            </small>
            <a class="btn btn-success btn-xs pull-right" href="~/Admin/QuanLyYeuCau/ThemMoi">Thêm mới</a>
        </h1>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-2">Id sinh viên</label> 
                                <div class="col-md-10"> 
                                    <select name="IDSinhVien" class="form-control">
                                        @foreach(var item in new SV.Models.Map.mapSinhVien().DanhSach())
                                        {
                                            <option value="@item.ID">@item.TenDangNhap - @item.HoVaTen</option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(model => model.idSinhVien, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Nội dung</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Trả lời</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TraLoi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TraLoi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Đã trả lời </label>
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.DaTraLoi)
                                        @Html.ValidationMessageFor(model => model.DaTraLoi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                               <label class="control-label col-md-2">Thời gian</label>
                               <div class="col-md-10">
                                   <input class="form-control" name="ThoiGian" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd HH:mm").Replace(' ','T'))" type="datetime-local" />

                                   @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                               </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
 </div>
