@model SV.Models.SinhVien

@{
    ViewBag.Title = "Đăng nhập tài khoản";
    Layout = "~/Views/shared/layout.cshtml";
}
    
<div class="container">
    <div class="col-md-4 col-sm-offset-4" style="text-align:center; padding-top:50px">
        <h3><b>Đăng nhập</b></h3>
    </div>
    <div class="col-md-4 col-sm-offset-4" style="">
        <form class="form-horizontal" method="post">
            <input name="returnUrl" type="hidden" value="@ViewBag.returnUrl" />
            <div class="form-group">
                <label class="control-label col-sm-12" style="text-align: left">Tên đăng nhập:</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" name="tenDangNhap" placeholder="tên đăng nhập, mã số sinh viên" value="@ViewBag.tenDangNhap">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-12"  style="text-align: left">Mật khẩu:</label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" name="matKhau" value="@ViewBag.matKhau">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="text-align:center">
                    <p>
                        Chưa có tài khoản.<a href="~/dang-ky"> Đăng ký</a>
                    </p>
                    <button type="submit" class="btn btn-danger">Đăng nhập</button>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-sm-12" style="text-align:center">
                    <p>
                        @if (ViewBag.error != null)
                        {
                            <span style="color:red">@ViewBag.error</span>
                        }
                    </p>
                </div>
            </div>
        </form>
    </div>

</div>