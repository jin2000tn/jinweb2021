@model SV.Models.SinhVien

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/shared/layout.cshtml";
}
<div class="container" > 
        <div class="col-md-4">
            <div class="col-md-12" style="text-align:center; padding:50px 0px">
                <img src="@Model.AnhDaiDien" class="img-circle" style="width:200px; height:200px" />
            </div>
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <td>
                            Tên đăng nhập
                        </td>
                        <td>
                            @Model.TenDangNhap
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên hiển thị
                        </td>
                        <td>
                            @Model.HoVaTen
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày sinh
                        </td>
                        <td>
                            @string.Format("{0:dd/MM/yyy}", Model.NgaySinh)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Số điện thoại
                        </td>
                        <td>
                            @Model.SoDienThoai
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            @Model.Email
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Lớp
                        </td>
                        <td>
                            @Model.Lop
                        </td>
                    </tr>
                </table>
                <p style="text-align:center">
                    <a href="~/cap-nhat-tai-khoan" class="btn btn-info">Cập nhật</a>
                    <a href="~/doi-mat-khau" class="btn btn-warning">Đổi mật khẩu</a>
                </p>
            </div>
        </div> 
</div>