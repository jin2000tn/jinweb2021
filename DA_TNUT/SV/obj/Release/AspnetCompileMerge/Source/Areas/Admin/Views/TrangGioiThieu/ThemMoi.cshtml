@model SV.Models.TrangGioiThieu

@{
    ViewBag.Title = "Thêm mới trang giới thiệu";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Trang bài viết</a>
        </li>
        <li>
            <a href="#">Thêm mới</a>
        </li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            <small>
                Thêm mới trang giới thiệu
            </small>
            <a class="btn btn-success btn-xs pull-right" href="~/Admin/TrangGioiThieu/ThemMoi">Thêm mới</a>
        </h1>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-2">Tên trang</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TenTrang, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenTrang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Link seo</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.LinkSeo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LinkSeo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Nội dung</label>
                                <div class="col-md-10"> 
                                    <textarea name="NoiDung" class="form-control">@Model.NoiDung</textarea>
                                    @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-success btn-sm" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        CKEDITOR.replace("NoiDung")
    </script> 
}